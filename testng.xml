<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="ExitGet" verbose="1" >
    <test name="Test on [Chrome]">
        <parameter name="selenium.browser" value="chrome" />
        <classes>
            <class name="com.ksergie.MainPageTests">
                    <methods>
                        <include name="testChatClient"/>
                        <include name="testBlogButtonAndLink"/>
                        <include name="testMainMenuItems"/>
                        <include name="testFooterMenuItems1"/>
