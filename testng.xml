                <methods>
                    <include name="testLoginWithCorrectData"/>
                    <include name="testNeedHelpLink"/>
                    <include name="testForgotPasswordLink"/>
                    <include name="testCreateNewOneLink"/>
                </methods>
            </class>
            <class name="com.ksergie.SignUpPage">
                <methods>
                    <include name="testLoginLink"/>
